                    <%havors.forEach((row)=>{%>
                    <div>
                        <div class="img" onclick="javacsript:location.href='/event_content?id=<%=row.id%>'"><img src="<%=row.eventimg%>" alt=""></div>
                    </div>
                    <%});%>
                </div>
                <div class="tap_event_content tab_content_wrap">
                    <%fires.forEach((row)=>{%>
                    <div>
                        <div class="img" onclick="javacsript:location.href='/event_content?id=<%=row.id%>'"><img src="<%=row.eventimg%>" alt=""></div>
                    </div>
                    <%});%>
                </div>
                <div class="tap_event_content tab_content_wrap">
                    <%rocks.forEach((row)=>{%>
                    <div>
                        <div class="img" onclick="javacsript:location.href='/event_content?id=<%=row.id%>'"><img src="<%=row.eventimg%>" alt=""></div>
                    </div>
                    <%});%>
                </div>
                <div class="tap_event_content tab_content_wrap">
                    <%seas.forEach((row)=>{%>
                    <div>
                        <div class="img" onclick="javacsript:location.href='/event_content?id=<%=row.id%>'"><img src="<%=row.eventimg%>" alt=""></div>
                    </div>
                    <%});%>
                </div>
                <div class="tap_event_content tab_content_wrap">
                    <%flowers.forEach((row)=>{%>
                    <div>
                        <div class="img" onclick="javacsript:location.href='/event_content?id=<%=row.id%>'"><img src="<%=row.eventimg%>" alt=""></div>
                    </div>
                    <%});%>
                </div>
                <div class="tap_event_content tab_content_wrap">
                    <%rings.forEach((row)=>{%>
                    <div>
                        <div class="img" onclick="javacsript:location.href='/event_content?id=<%=row.id%>'"><img src="<%=row.eventimg%>" alt=""></div>
                    </div>
                    <%});%>
                </div>
            </div>
            <div class="notice_btn_wrap">
                <div class="notice_btn">
                    <input type="button" value="이벤트 등록" class="list_btn" onclick="javascript:location.href='/eventwrite'" />
                </div>
            </div>
            <div class="wave">
                <div class="wave_bg wbg_bot"></div>
            </div>
        </section>
    </main>
</body>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script src="js/event.js"></script>
<script>
