    <section class="section2">
        <div class="sec_wrap">
            <input type="hidden" value="<%= row.id %>" />
            <h2>"<%= row.name %>"님, 회원님의 예약신청 사항입니다</h2>
            <div class="reserve_list">
                <div>
                    <div class="sub_cate bgr"><h4>축제</h4></div>
                    <h4><%= row.festival %></h4>
                </div>

                <div>
                    <div class="sub_cate bgp"><h4>날짜</h4></div>
                    <h4><%= row.r_time %></h4>
