                <div>
                    <div class="sub_cate bgb"><h4>시간</h4></div>
                    <h4><%= row.time %></h4>
                </div>
                <div>
                    <div class="sub_cate bgp"><h4>예약일시</h4></div>
                    <h4><%= row.c_time %></h4>
                </div>
                <div>
                    <div class="sub_cate bgy"><h4>예약자명</h4></div>
                    <h4><%= row.name %></h4>
                </div>
                <div>
                    <div class="sub_cate bgg"><h4>전화번호</h4></div>
                    <h4><%= row.phone %></h4>
                </div>
                <span class="notice_btn_wrap">
                    <span class="notice_btn">
                        <input type="button" value="확인" class="list_btn" />
                    </span>
                    <span class="notice_btn">
                        <input type="button" value="수정" class="list_btn" />
                    </span>
                    <span class="notice_btn">
                        <input type="button" value="취소" class="list_btn" />
                    </span>
                </span>
            </div>
        </div>
        <div class="wave">
            <div class="wave_bg wbg_bot"></div>
        </div>
    </section>
